<!DOCTYPE html>
<html>
  <head>
    <title>SystemX</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag '//www.google.com/jsapi','chartkick','application'%>
  </head>

  <body>
	<header>
		受注量予測システム
	</header>
	<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="collapse navbar-collapse" id="navbarEexample">
            <ul class="nav navbar-nav">
				<li class="<%= 'active' if current_page?(action:'index') %>"><%= link_to "出力",:action => 'index' %></li>
				<li class="<%= 'active' if current_page?(action:'conf') %>"><%= link_to "設定",:action => 'conf' %></li>
				<li class="<%= 'active' if current_page?(action:'stock') %>"><%= link_to "在庫", :action => 'stock' %></li>
			</ul>
        </div>
    </div>
	</nav>
	
    <%= yield %>
  </body>
</html>
