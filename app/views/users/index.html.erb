<div class="ship-table">
<h3>本日(<%= @time.month %>月<%= @time.day %>日)の製造量</h3>
<% if @view_mode == 4 then %>
<table>
  <tr>
    <th></th><th>F</th><th>全卵</th><th>その他</th><th>計</th>
  </tr>
  <tr>
    <td class="vertical">本日出荷量</td>
	<td><%= @today.f_ship %></td>
	<td><%= @today.z_ship %></td>
	<td><%= @today.other_ship %></td>
	<td><%= @today.f_ship + @today.z_ship + @today.other_ship%></td>
  </tr>
  <tr>
    <td class="vertical">作り置き利用分</td>
	<td><%= @today.f_stored %></td>
	<td><%= @today.z_stored %></td>
	<td class="nodata"></td>
	<td><%= @today.f_stored + @today.z_stored %></td>
  </tr>
  <tr>
    <td class="vertical">本日分製造量</td>
	<td><%= @today.f_ship - @today.f_stored %></td>
	<td><%= @today.z_ship - @today.z_stored %></td>
	<td><%= @today.other_ship %></td>
	<td><%= @today.f_ship - @today.f_stored + @today.z_ship - @today.z_stored + @today.other_ship %></td>
  </tr>
  <tr>
    <td class="vertical">作り置き分製造量</td>
	<td><%= @today.f_store %></td>
	<td><%= @today.z_store %></td>
	<td class="nodata"></td>
	<td><%= @today.f_store + @today.z_store %></td>
  </tr>
  <tr>
    <td class="vertical">総製造量</td>
	<td><%= @today.f_ship - @today.f_stored + @today.f_store %></td>
	<td><%= @today.z_ship - @today.z_stored + @today.z_store %></td>
	<td><%= @today.other_ship %></td>
	<td><%= @today.f_ship - @today.f_stored + @today.f_store + @today.f_ship - @today.f_stored + @today.f_store + @today.other_ship %></td>
  </tr>
</table>
<% else %>
<p id="noexcel">
	<%=@noexcelmsg %>
</p>
<% end %>

<% if @view_mode == 2 then %>
	<%= form_tag({controller: "users",action: "index", method: "post"}, {multipart: true}) do %>
		<%= hidden_field_tag :setting_fin, @view_mode == 3 ? true:false %>
		<%= hidden_field_tag :supposed_date, @tabledate.date %>
		<%= submit_tag "送信" %>
	<%= file_field_tag :file %>
	<% end %>
<% end %>


<% if @view_mode == 3 then %>
	<%= form_tag({controller: "users",action: "index", method: "post"}, {multipart: true}) do %>
<table class="fin_table">
  <tr>
    <th></th><th>F</th><th>全卵</th><th>その他</th><th>計</th>
  </tr>
  <tr>
    <td class="vertical">当日分製造量</td>
	<td><%= @tabledate.f_ship - @tabledate.f_stored %></td>
	<td><%= @tabledate.z_ship - @tabledate.z_stored %></td>
	<td><%= @tabledate.other_ship %></td>
	<td><%= @tabledate.f_ship - @tabledate.f_stored + @tabledate.z_ship - @tabledate.z_stored + @tabledate.other_ship %></td>
  </tr>
</table>
		<%= hidden_field_tag :setting_fin, @view_mode == 3 ? true:false %>
		<%= hidden_field_tag :supposed_date, @tabledate.date %>
		<%= submit_tag "送信" %>
		<%= file_field_tag :file %>
	<% end %>
	<%= form_tag({controller: "users",action: "index", method: "post"}, {multipart: true}) do %>
<br><br>
<table class="fin_table">
  <tr>
    <th></th><th>F</th><th>全卵</th><th>その他</th><th>計</th>
  </tr>
  <tr>
    <td class="vertical">作り置き分製造量</td>
	<td><%= text_field_tag :f_result, @tabledate.f_store,:size=>"3" %></td>
	<td><%= text_field_tag :z_result, @tabledate.z_store,:size=>"3" %></td>
	<td class="nodata"></td>
	<td><%= @tabledate.f_store + @tabledate.z_store %></td>
  </tr>
</table>	
		<%= submit_tag "確定" %>
		<%= hidden_field_tag :setting_fin, true %>
		<%= hidden_field_tag :supposed_date, @tabledate.date %>
	<% end %>
<% end %>

</div>


